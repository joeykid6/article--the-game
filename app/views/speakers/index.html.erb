<h1>Listing speakers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Short name</th>
    <th>Title</th>
    <th>Source name</th>
    <th>Source type</th>
    <th>Url</th>
    <th>Thumbnail file name</th>
    <th>Thumbnail content type</th>
    <th>Thumbnail file size</th>
    <th>Thumbnail updated at</th>
  </tr>

<% @speakers.each do |speaker| %>
  <tr>
    <td><%=h speaker.name %></td>
    <td><%=h speaker.short_name %></td>
    <td><%=h speaker.title %></td>
    <td><%=h speaker.source_name %></td>
    <td><%=h speaker.source_type %></td>
    <td><%=h speaker.url %></td>
    <td><%=h speaker.thumbnail_file_name %></td>
    <td><%=h speaker.thumbnail_content_type %></td>
    <td><%=h speaker.thumbnail_file_size %></td>
    <td><%=h speaker.thumbnail_updated_at %></td>
    <td><%= link_to 'Show', speaker %></td>
    <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
    <td><%= link_to 'Destroy', speaker, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

