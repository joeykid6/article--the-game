<h1>Listing guides</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Short name</th>
    <th>Thumbnail file name</th>
    <th>Thumbnail content type</th>
    <th>Thumbnail file size</th>
    <th>Thumbnail updated at</th>
  </tr>

<% @guides.each do |guide| %>
  <tr>
    <td><%=h guide.name %></td>
    <td><%=h guide.short_name %></td>
    <td><%=h guide.thumbnail_file_name %></td>
    <td><%=h guide.thumbnail_content_type %></td>
    <td><%=h guide.thumbnail_file_size %></td>
    <td><%=h guide.thumbnail_updated_at %></td>
    <td><%= link_to 'Show', guide %></td>
    <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
    <td><%= link_to 'Destroy', guide, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New guide', new_guide_path %>