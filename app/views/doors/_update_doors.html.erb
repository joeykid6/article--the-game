



<h4>Doors this line opens</h4>
<table>
<tr>
  <th></th>
  <th>Door to room . . .</th>

</tr>
<% @doors.each do |door| %>
<tr>
  
  

  <td>

  <% if door.parent_room_id == @room.id && door.door_direction=="horizontal" %>
        <%= add_door_img_dl_small("right",door.child_room) %>
          </td> <td><%=door.child_room.name %></td>
          <% elsif door.parent_room_id == @room.id && door.door_direction=="vertical"  %>
            <%= add_door_img_dl_small("bottom",door.child_room) %>
            </td> <td><%=door.child_room.name %></td>
              <% elsif door.parent_room_id != @room.id && door.door_direction=="vertical"  %>
                <%= add_door_img_dl_small("top",door.parent_room) %>
                </td> <td><%=door.parent_room.name %></td>
                  <% else %>
                    <%= add_door_img_dl_small("left",door.parent_room) %>
                    </td> <td><%=door.parent_room.name %></td>
                    <% end %>

  
  
</tr>
 <% end %>
</table>
<%= link_to 'Edit Door Assignment', url_for(:controller=>"dialogue_lines",:action=>"select_doors",
  :section_id=>@section,:room_id=>@room,:id=>@dialogue_line)%>

 
