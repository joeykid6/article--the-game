<h1>New game</h1>

<% form_for(@game, :html=>{:multipart=>true}) do |f| %>
  <%= f.error_messages %>



<p>
    Enter the name you want to use.<br />
    <%= f.text_field :short_name %>
  </p>

<p><label for="thumbnail">Upload an image to use as your avatar.  If you don't upload one, we'll provide a default.</label><br />
    <%= f.file_field :thumbnail %>
  </p>

  <p>
    <%= f.submit 'Start Game' %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>