<% #Generates the avatars for speakers and guides -%>
  <div class="<%= avatar.class.to_s.downcase %>" id="<%= "#{avatar.class.to_s.downcase}_#{avatar.id}" %>">
    <%= link_to_remote "#{image_tag(avatar.thumbnail.url(:medium))}",
          :url => { :action => 'build_conversation',
          :line_generator_id => avatar.id,
          :line_generator_type => avatar.class.to_s,
          :room_id => room.id } %>
    <h3>
    <%= link_to_remote h(truncate(avatar.short_name, :length => 14)),
          :url => { :action => 'build_conversation',
          :line_generator_id => avatar.id,
          :line_generator_type => avatar.class.to_s,
          :room_id => room.id } %>
    </h3>
  </div>
