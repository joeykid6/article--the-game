<% #Generates the avatars for media objects %>

 <% if media_avatar.image_object == true%>


<%= link_to avatar_div(media_avatar),
        media_object_path(media_avatar),
        :class => "lightview",
        :rel => "iframe",
        :fullscreen=>"true",
        :title => h(media_avatar.short_name) + ':: ::fullscreen: true' %>


<%else%>

<%= link_to avatar_div(media_avatar),
        "#{media_avatar.url}",
        :class => "lightview",
        :rel => "iframe",
        :title => h(media_avatar.short_name) + ':: :: width: '+ media_avatar.object_width.to_s + ', height: ' + media_avatar.object_height.to_s  %>

<%end%>